<%# The view posts ejs shows all the posts that have been added. %>
<%# Information sucb as when the post was added, the topic, the name of the post, the content and which user posted, is displayed. %>

<!doctype html>

<html>

  

  <head>

    

    <title><%=forumName%> - Posts</title>

    <link rel="stylesheet" type="text/css" href="main.css" />


  </head>


  <body>


    <h1><%=forumName%></h1>

    <h2>View posts</h2>


  <table>


  <tr><th>Date</th><th>Topic</th><th>Title</th><th>Content</th><th>User</th></tr>


    <% posts.forEach(function(post) { %>


  <tr>


  <td><%= post.post_date.toDateString() %> <%= post.post_date.getHours() %>:<%= post.post_date.getMinutes() %></td>


    <td><%= post.topic_title %></td>

    <td><%= post.post_title %></td>

    <td><%= post.post_content %></td>

    <td><%= post.username %></td>


  </tr>


    <% }) %>    


  </table>   

  </body>

  <form>

  <div><div>

    

    <input type="button" value="Go back" onclick="history.back()" />

  

  </form>

</html>
